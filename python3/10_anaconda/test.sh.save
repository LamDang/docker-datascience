#! /bin/bash
## Build tests
image_name="10_anaconda:test"
DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

echo "Building test image"
sudo docker build -t ${image_name} $DIR

## Run tests
echo "Test anaconda version"
sudo docker run --rm ${image_name} conda conda list -n root anaconda$ | grep -o '[0-9].[0-9].[0-9]'
#echo "Test anaconda py2 version"
sudo docker run --rm ${image_name} conda conda list -n python2 anaconda$ | grep -o '[0-9].[0-9].[0-9]'
#echo "Test sklearn"
#sudo docker rm test
#sudo docker run -d --name test 00_jupyter_setup:test start-noteobok.sh
#sudo docker stop test && sudo docker rm test

## Clean up
sudo docker rmi ${image_name}
