# Install Theano
RUN 	apt-get install --yp \
	python-numpy \
	python-scipy \
	python-dev \
	python-pip \
	python-nose \
	g++ \
	libopenblas-dev

RUN 
	sudo pip install Theano
	4a- Install OPENBLAS
echo -e "\n[blas]\nldflags = -lopenblas\n" >> ~/.theanorc
	4b- Test theano
python `python -c "import os, theano; print os.path.dirname(theano.__file__)"`/misc/check_blas.py
